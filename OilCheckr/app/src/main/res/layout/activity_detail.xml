<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="eu.artviz.oilcheckr.activities.DetailActivity">

    <TextView
        android:id="@+id/tvVehicleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicle_name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvMileageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvOilChangeTargetLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp"
        android:text="@string/mileage" />

    <TextView
        android:id="@+id/tvMileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvAverageMileage"
        android:layout_alignStart="@+id/tvAverageMileage"
        android:layout_alignTop="@+id/tvMileageLabel"
        android:text="@string/km_sample" />

    <TextView
        android:id="@+id/tvOilChangeTargetLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvVehicleName"
        android:layout_marginTop="105dp"
        android:text="@string/oil_change_target" />

    <TextView
        android:id="@+id/tvOilChangeTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvMileage"
        android:layout_alignStart="@+id/tvMileage"
        android:layout_alignTop="@+id/tvOilChangeTargetLabel"
        android:text="@string/km_sample_2" />

    <TextView
        android:id="@+id/tvCurrentOilLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvOilChangeTargetLabel"
        android:layout_marginTop="27dp"
        android:text="@string/current_oil" />

    <TextView
        android:id="@+id/tvCurrentOil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvOilChangeTarget"
        android:layout_alignStart="@+id/tvOilChangeTarget"
        android:layout_alignTop="@+id/tvCurrentOilLabel"
        android:text="@string/oil_sample" />

    <TextView
        android:id="@+id/tvAverageMileageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCurrentOilLabel"
        android:layout_marginTop="25dp"
        android:text="@string/average_oil_month" />

    <TextView
        android:id="@+id/tvAverageMileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnToOilChangeId"
        android:layout_alignStart="@+id/btnToOilChangeId"
        android:layout_alignTop="@+id/tvAverageMileageLabel"
        android:text="@string/km_sample_3" />

    <TextView
        android:id="@+id/tvToCarHistoryId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnToUpdateId"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="@string/to_car_history" />

    <Button
        android:id="@+id/btnToUpdateId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_update"
        android:layout_alignTop="@+id/btnToOilChangeId"
        android:layout_toRightOf="@+id/tvMileageLabel"
        android:layout_toEndOf="@+id/tvMileageLabel" />

    <Button
        android:id="@+id/btnToOilChangeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oil_change"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvToCarHistoryId"
        android:layout_toEndOf="@+id/tvToCarHistoryId" />

</RelativeLayout>
