<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="eu.artviz.oilcheckr.activities.DetailActivity"
    android:orientation="vertical">

    <TextView
        style="@style/tvHeaderStyle"
        android:id="@+id/tvHeaderId"/>

     <TableLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TableRow>
             <TextView
                 style="@style/tvCarDetailsInfoStyle"
                 android:text="@string/kilometres_miles"
                 android:id="@+id/tvKilometresMilesId"/>

             <TextView
                 style="@style/tvCarDetailsValuesStyle"
                 android:id="@+id/textView2"/>
         </TableRow>
         <TableRow>
             <TextView
                 style="@style/tvCarDetailsInfoStyle"
                 android:text="@string/oil_change_target"
                 android:id="@+id/tvOilChangeTargetId"/>

             <TextView
                 style="@style/tvCarDetailsValuesStyle"
                 android:id="@+id/tvOilChangeTargetValueId" />
         </TableRow>
         <TableRow>
             <TextView
                 style="@style/tvCarDetailsInfoStyle"
                 android:text="@string/current_oil"
                 android:id="@+id/tvCurrentOilId"/>

             <TextView
                 style="@style/tvCarDetailsValuesStyle"
                 android:id="@+id/tvCurrentOilValueId" />
         </TableRow>
         <TableRow>
             <TextView
                 style="@style/tvCarDetailsInfoStyle"
                 android:text="@string/average_oil_month"
                 android:id="@+id/tvAverageOilMonthId"
                 />

             <TextView
                 style="@style/tvCarDetailsValuesStyle"
                 android:id="@+id/tvAverageOilMonthValueId" />
         </TableRow>
         <TableRow>
             <TextView
                 style="@style/tvToCarHistoryStyle"
                 android:text="@string/to_car_history"
                 android:id="@+id/tvToCarHistoryId"/>
         </TableRow>
         <TableRow>
             <Button
                 style="@style/carDetailsBtnStyle"
                 android:text="@string/to_update"
                 android:id="@+id/btnToUpdateId"/>
             <Button
                 style="@style/carDetailsBtnStyle"
                 android:text="@string/oil_change"
                 android:id="@+id/btnToOilChangeId" />
         </TableRow>
     </TableLayout>





</LinearLayout>
